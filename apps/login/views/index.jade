extends layout

block content
  form(name="login", method="post", class="pure-form")
    fieldset(class="pure-group")
      input(type="text", name="username", class="pure-input-1-2", placeholder="Username")
      input(type="password", name="password", class="pure-input-1-2", placeholder="Password")
    input(type="submit", value="login", class="pure-button pure-input-1-2 pure-button-primary")
